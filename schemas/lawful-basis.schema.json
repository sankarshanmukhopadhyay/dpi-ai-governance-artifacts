{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Lawful Basis",
  "type": "object",
  "required": [
    "basis_type",
    "jurisdiction",
    "valid_from"
  ],
  "properties": {
    "basis_type": {
      "type": "string",
      "enum": [
        "consent",
        "contract",
        "legal_obligation",
        "vital_interest",
        "public_task",
        "legitimate_interest"
      ]
    },
    "jurisdiction": {
      "$ref": "common-defs.schema.json#/$defs/jurisdiction"
    },
    "authority_reference": {
      "type": "string"
    },
    "consent_ref": {
      "type": "string"
    },
    "valid_from": {
      "$ref": "common-defs.schema.json#/$defs/timestamp"
    },
    "valid_until": {
      "$ref": "common-defs.schema.json#/$defs/timestamp"
    },
    "revocation_endpoint": {
      "type": "string",
      "format": "uri"
    },
    "evidence_hash": {
      "$ref": "common-defs.schema.json#/$defs/hash"
    }
  },
  "additionalProperties": false
}