{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RiskRegister",
  "type": "object",
  "properties": {
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          },
          "likelihood": {
            "type": "string"
          },
          "impact": {
            "type": "string"
          },
          "treatment": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "owner",
          "likelihood",
          "impact"
        ]
      }
    }
  },
  "required": [
    "risks"
  ]
}
